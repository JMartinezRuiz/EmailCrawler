-- Config de archivos de tempdb: tama√±o inicial, crecimiento y si es en %
SELECT
  db               = DB_NAME(mf.database_id),
  mf.file_id, mf.name, mf.type_desc, mf.physical_name,
  size_mb          = CONVERT(decimal(18,2), mf.size*8.0/1024),
  max_size_mb      = CASE WHEN mf.max_size = -1 THEN -1 ELSE CONVERT(decimal(18,2), mf.max_size*8.0/1024) END,
  is_percent_growth,
  growth_desc      = CASE WHEN mf.is_percent_growth=1 
                          THEN CONCAT(mf.growth, '%') 
                          ELSE CONCAT(CONVERT(int, mf.growth*8.0/1024), ' MB') END
FROM sys.master_files AS mf
WHERE mf.database_id = DB_ID('tempdb')
ORDER BY mf.file_id;
